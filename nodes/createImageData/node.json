{
  "name": "createImageData",
  "ns": "canvas",
  "async": true,
  "title": "Create Image Data",
  "description": "Creates a new, blank ImageData object with the specified dimensions. All of the pixels in the new object are transparent black",
  "phrases": {
    "active": "Creating image data"
  },
  "ports": {
    "input": {
      "context": {
        "title": "Context",
        "type": "CanvasRenderingContext2D",
        "required": "true"
      },
      "image": {
        "title": "imagedata",
        "type": "ImageData"
      },
      "in": {
        "title": "Dimensions",
        "async": true,
        "type": "array",
        "items": [
          { "type": "number", "title": "Width" },
          { "type": "number", "title": "Height" }
        ],
        "minItems": 2,
        "maxItems": 2
      }
    },
    "output": {
      "context": {
        "title": "Context",
        "type": "CanvasRenderingContext2D"
      },
      "out": {
        "title": "Point",
        "type": "array"
      }
    }
  }
}
